@using BsBios.Portal.ViewModel
@model AgendamentoDeCarregamentoCadastroVm
@{
    Layout = null;
}
<div class="divFiltros">
    <fieldset >
        <legend>Agendamento de Descarregamento</legend>
        <form id="agendamentodecarregamento">
            @Html.HiddenFor(x => x.IdQuota)
            @Html.HiddenFor(x => x.IdAgendamento)
            <div class="linha">
                <div class="colunaFiltro">
                    @Html.LabelFor(x => x.DescricaoDoTerminal)
                    @Html.TextBoxFor(x => x.DescricaoDoTerminal,new{@readonly=true,@class="campoDesabilitado"})
                </div>
                <div class="colunaFiltro"></div>
            </div>
            <div class="linha">
                <div class="colunaFiltro">
                    @Html.LabelFor(x => x.Placa)
                    @Html.TextBoxFor(x => x.Placa,new {@class="maskplaca"})
                    <p class="mensagemErro">
                        @Html.ValidationMessageFor(x => x.Placa)
                    </p>
                </div>
                <div class="colunaFiltro">
                    @Html.LabelFor(x => x.Peso)
                    @Html.TextBoxFor(x => x.Peso,new{@class="maskquantidade"})
                    <p class="mensagemErro">
                        @Html.ValidationMessageFor(x => x.Peso)
                    </p>
                </div>
            </div>
        </form>

    </fieldset>
    <div id="divErro" class="message-error"></div>
</div>
<script type="text/javascript">
    $(function () {
        aplicaMascaraQuantidade();
        aplicaMascaraPlaca();
        var permiteEditar = '@Model.PermiteEditar'.boolean();
        if (permiteEditar || '@Model.PermiteRealizar'.boolean()) {
            $('.ui-dialog-buttonpane').show();
        } else {
            $('.ui-dialog-buttonpane').hide();
        }

        if (!'@Model.PermiteEditar'.boolean()) {
            $('#agendamentodecarregamento').find('input')
                .attr('readonly', true)
                .addClass('campoDesabilitado');
        }
        
    })
</script>


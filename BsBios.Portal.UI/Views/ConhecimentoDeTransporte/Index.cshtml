@{
    ViewBag.TituloDaPagina = "Conhecimento de Transporte";
}
@section styles{
    <link href="@Url.Content("~/Content/kendo/2012.3.1114/kendo.common.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/kendo/2012.3.1114/kendo.default.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/jquery.loadmask.css")" rel="stylesheet" />
}

<fieldset>
    <legend>Filtros</legend>
    <form id="formularioDeFiltros">
        <div class="linha">
            <div class="coluna">
                <label for="dataDeEmissaoInicial">Data de Emissão Inicial</label>
                <input type="text" id="dataDeEmissaoInicial" value="@DateTime.Today.ToShortDateString()" class="campopequeno campoDatePicker maskdata"/>
            </div>
            <div class="coluna">
                <label for="dataDeEmissaoFinal">Data de Emissão Final</label>
                <input type="text" id="dataDeEmissaoFinal" class="campopequeno campoDatePicker maskdata"/>
            </div>
        </div>
        <div class="linha">
            <div class="coluna">
                <label for="codigoDoFornecedor">Código do Fornecedor</label>
                <input type="text" id="codigoDoFornecedor" class="campopequeno"/>
            </div>
            <div class="coluna">
                <label for="codigoDaTransportadora">Código da Transportadora</label>
                <input type="text" id="codigoDaTransportadora" class="campopequeno"/>
            </div>

        </div>
        
        <div class="linha">
            <div class="coluna">
                <label for="Status">Status</label>
                <select id="Status">
                    <option>Todos</option>
                    <option value="0">Não atribuido</option>
                    <option value="1">Atribuido</option>
                    <option value="2">Erro</option>
                    <option value="3">Sem OT</option>
                </select>
            </div>
            <div class="coluna">
                <label for="numeroDoContrato">Número do Contrato</label>
                <input type="text" id="numeroDoContrato" class="campopequeno"/>
            </div>
        </div>

        <div class="divBotao">
            <input id="btnPesquisar" type="button" value="Pesquisar" class="blue"/>
            <input id="btnLimpar" type="reset" value="Limpar" class="blue"/>
        </div>
    </form>
</fieldset>
<div id="conhecimentosDeTransporte" class="divGrid"></div>
<div class="divBotao">
    <input id="reprocessar" type="button" value="Reprocessar" class="blue" title="Tenta vincular automaticamente conhecimentos com erro"/>
</div>

@section scripts
{
    <script src="@Url.Content("~/Scripts/kendo/2012.3.1114/kendo.web.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2012.3.1114/kendo.grid.min.js")"></script>
    @Scripts.Render("~/bundles/scriptsgerais")
    <script src="@Url.Content("~/Scripts/jquery.maskedinput.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.meio.mask.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.loadmask.js")"></script>
    <script src="@Url.Content("~/Scripts/ConhecimentoDeTransporte/Index.js")">
    </script>
}    
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />   
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link rel="stylesheet" type="text/css" href="http://cdn.sencha.com/ext-4.1.1a-gpl/resources/css/ext-all.css" />
    </head>
    <body>
        @Html.Partial("_Header")
        <div style="clear: both"></div>
        <div id="middle">
            <div id="menuprincipal" style="width: 230px; border-right: solid 2px gray">
                @{
                    Html.RenderAction("Menu","Home");
                }
            </div>
            <div id="body2" style="margin-top: 5px" >
@*                <div style="display: block">
                    <section class="content-wrapper main-content clear-fix">*@
                        @RenderBody()
@*                    </section>
                </div>*@
            </div>
            
        </div>
        @Scripts.Render("~/bundles/jquery")
        <script src="http://cdn.sencha.com/ext-4.1.1a-gpl/ext-all.js"></script>
        @RenderSection("scripts", required: false)
    </body>
</html>

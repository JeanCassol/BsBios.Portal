@{
    Layout = null;
    var blnExibirBotacaoSelecionarCotacoes = (bool) ViewData["ExibirBotacaoSelecionarCotacao"];
    var permiteOutrasOperacoes = (bool)ViewData["PermiteOutrasOperacoes"];
    var permiteFecharProcesso = (bool)ViewData["PermiteFecharProcesso"];
}

<fieldset>
    <legend>Fornecedores</legend>
    <div class="divBotao">
        <input type="button" id="btnSelecionarFornecedores" value="Fornecedores Participantes" class="@(permiteOutrasOperacoes ? Html.Raw("blue"): Html.Raw("gray"))" @(!permiteOutrasOperacoes ? "disabled":"") style="width: 27%"/>
    </div>
    <div id="gridCotacaoFornecedor" class="divGrid"></div>
    <div id="divFecharProcessoDeCotacaoDeMaterial" class="janelaModal"></div>
</fieldset>
           
@Html.ValidationSummary(true)

<fieldset>
    <legend>Ações</legend>
    <div class="divBotao">
        <input type="button" id="btnAbrirProcesso" value="Abrir" class="@(permiteOutrasOperacoes ? Html.Raw("blue"): Html.Raw("gray"))" @(!permiteOutrasOperacoes ? "disabled":"")  />
        @if (blnExibirBotacaoSelecionarCotacoes)
        {
            <input type="button" id="btnSelecionarCotacoes" value="Selecionar Cotação" style="width: 175px" class="@(permiteFecharProcesso ? Html.Raw("blue"): Html.Raw("gray"))" @(!permiteFecharProcesso ? "disabled" : "") />
        }
        <input type="button" id="btnFecharProcesso" value="Fechar" class="@(permiteFecharProcesso ? Html.Raw("blue"): Html.Raw("gray"))" @(!permiteFecharProcesso ? "disabled":"") />
        <input type="button" id="btnCancelarProcesso" value="Cancelar" class="blue" />
    </div>
</fieldset>

<div id="divSelecionarFornecedores" class="janelaModal"></div>
<div id="divSelecionarCotacoes" class="janelaModal"></div>
<div id="divHistoricoCotacao" class="janelaModal">
    @*<div id="gridCotacaoHistorico" class="divGrid"></div>*@    
</div>



@model BsBios.Portal.ViewModel.ProdutoCadastroVm

@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro de Produtos</h2>

@*<div class="cadastro"></div>*@
@using (Html.BeginForm()) {

    <fieldset>
        <legend>ProdutoCadastroVm</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.CodigoSap)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CodigoSap)
            @Html.ValidationMessageFor(model => model.CodigoSap)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>

            @Html.ValidationSummary(true)
        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar para Listagem", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
